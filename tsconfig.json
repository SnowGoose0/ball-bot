{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./prod",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
}